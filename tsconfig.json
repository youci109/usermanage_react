{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true,
    "noImplicitAny": true,
    "jsx": "react",
    "outDir": "./dist/",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}